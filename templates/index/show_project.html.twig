{% extends "parent/layout.html.twig" %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('show_project') }}
{% endblock %}
{% block body %}
	<div class="container-fluid mt-5">
		<div class="row">
			<div class="col-6">
				<div class="presentation">
					<h1>
						<strong>{{ project.name }}</strong>
					</h1>
					<h2>Description</h2>
					<p>{{ project.description }}</p>
				</div>
				<div class="d-flex justify-content-around">
					<div class="contributor">
						<h2>Contributeur</h2>
						<ul>
							{% for contributor in contributors %}
								<li>{{ contributor.lastname }} {{ contributor.firstname }}</li>
							{% endfor %}
						</ul>
					</div>
					<div class="techno">
						<h2>Technologie utilis√©</h2>
						<ul>
							{% for techno in technos %}
								<li>{{ techno.name }}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
			<div id="carouselExampleControls" class="carousel slide col-6" data-bs-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img src="{{ asset('uploads/' ~ project.images[0].name) }}" class="d-block w-100" alt="{{ project.images[0].name }}">
					</div>
					{% for image in project.images %}
						<div class="carousel-item">
							<img src="{{ asset('uploads/' ~ image.name) }}" class="d-block w-100" alt="{{ image.name }}">
						</div>
					{% endfor %}
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</div>
		<a class="create-button" href="/#project">retour</a>
	</div>
{% endblock %}
