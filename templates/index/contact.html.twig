{% block stylesheets %}
	{{ encore_entry_link_tags('contact') }}
{% endblock %}
<section class="contact" id="contact">
	<img class="background-contact" src="{{ asset('build/images/between-mountains.jpg') }}" alt="background-contact"/>
	<div class="d-flex justify-content-end mx-0">
		<div class="form-new-project bg-secondary p-4">
			<h1 class="mb-3 font-weight-normal d-flex justify-content-center">
				<strong>Contact</strong>
			</h1>
			{{ form_start(formContact) }}
			{{ form_row(formContact.lastname) }}
			{{ form_row(formContact.firstname) }}
			{{ form_row(formContact.email) }}
			{{ form_row(formContact.message) }}
			<button class="btn create-button">{{ button_label|default('ENVOYER') }}</button>
			{{ form_end(formContact) }}
		</div>
	</div>
</section>
